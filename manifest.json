{
    "name": "X Post Interruptor",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Xの投稿内容をフォームから書き換える拡張機能です",
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "src/input.js",
                "src/gpt.js",
                "src/ogya.js",
                "src/main.js"
            ],
            "css": [
                "src/main.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
